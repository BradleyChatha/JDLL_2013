<UserControl x:Class="JDLL.Controls.PasswordField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="96" Width="196">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="User" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="66,3,0,0"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,28,0,0"/>
        <PasswordBox x:Name="Pass" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Margin="66,31,0,0"/>
        <Button Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="111,64,0,0" Click="Button_Click_1" KeyUp="Button_KeyUp"/>
        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="31,64,0,0" Click="Button_Click" KeyUp="Button_KeyUp"/>

    </Grid>
</UserControl>
